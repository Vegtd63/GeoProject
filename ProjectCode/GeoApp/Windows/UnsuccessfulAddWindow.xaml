            <TextBlock Text="Add a Sample" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Margin="-153,0,0,0" Foreground="White"></TextBlock>
        </DockPanel>
        <TextBlock HorizontalAlignment="Left" Margin="86,199,0,0" FontSize="28" Text="Could not add sample. " TextWrapping="Wrap" VerticalAlignment="Top" Height="43" Width="648" TextAlignment="Center" />
