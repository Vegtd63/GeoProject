<Window x:Class="GeoApp.DeleteSampleConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeoApp"
        mc:Ignorable="d"
        Title="DeleteSampleConfirmationWindow" Height="500" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="80" Fill="Black" Width="800" Stroke="Black" VerticalAlignment="Top" />
        <TextBlock FontSize="30" HorizontalAlignment="Center" Foreground="White" Margin="0,20,0,0" Text="Delete a Sample" TextWrapping="Wrap" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="130,242,0,0" FontSize="26" Text="Are you sure you want to delete this sample?" TextWrapping="Wrap" VerticalAlignment="Top" Height="43" Width="572" />
        <Button FontWeight="Medium" Content="Delete" Background="#FFCC00" FontSize="25" HorizontalAlignment="Left" Margin="147,354,0,0" Height="60" Width="204" VerticalAlignment="Top" Click="Delete" />
        <Button FontWeight="Medium" Content="Cancel" Background="#A8A6A0" FontSize="25" HorizontalAlignment="Left" Margin="432,354,0,0" Height="60" Width="204" VerticalAlignment="Top" Click="Cancel" />
    </Grid>
</Window>
